<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Auflistung"
        android:id="@+id/buttonListB"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Antwort"
        android:id="@+id/buttonAnswerB"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="75dp"
        android:layout_gravity="left|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="check"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="NÃ¤chste"
        android:id="@+id/buttonNextB"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="75dp"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="next"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vokabular"
        android:layout_marginBottom="150dp"
        android:id="@+id/textToFindB"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_marginBottom="50dp"
        android:id="@+id/textAnswerB"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center" />

</FrameLayout>